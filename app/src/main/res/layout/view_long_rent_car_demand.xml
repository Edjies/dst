<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@color/common_gray_background_color">
        <TextView
            android:id="@+id/tv_demand"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:text="车型需求(1)"
            android:textSize="15dp"
            android:textColor="@color/common_item_sub_text_color"
            android:background="@color/common_gray_background_color"/>

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:text="删除"
            android:textSize="14dp"
            android:textColor="@color/common_item_sub_text_color"
            android:background="@color/common_gray_background_color"/>
    </RelativeLayout>

    <TextView android:layout_width="match_parent" android:layout_height="@dimen/common_divide_height" android:background="@color/common_divide_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="车辆型号"
            android:textSize="14dp"
            android:textColor="@color/common_item_main_text_color"
        />

        <TextView
            android:id="@+id/tv_car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:drawableRight="@drawable/right"
            android:drawablePadding="8dp"
            android:hint="请选择"
            android:text=""
            android:textSize="14dp"
            android:textColorHint="@color/common_item_sub_text_color"
            android:textColor="@color/common_item_sub_text_color"
        />

        <TextView android:layout_width="match_parent" android:layout_height="@dimen/common_divide_height" android:background="@color/common_divide_color" android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="需求数量"
            android:textSize="14dp"
            android:textColor="@color/common_item_main_text_color"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_gray_stroke"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp">

            <ImageView
                android:id="@+id/iv_sub"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/image_110jian"

            />

            <TextView android:layout_width="@dimen/common_divide_height" android:layout_height="match_parent" android:background="@color/common_divide_color"/>

            <EditText
                android:id="@+id/et_number"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="number"
                android:enabled="false"
                android:text="1"
                android:textSize="16dp"
                android:textColor="@color/common_item_sub_text_color"
                android:background="@android:color/transparent"
            />

            <TextView android:layout_width="@dimen/common_divide_height" android:layout_height="match_parent" android:background="@color/common_divide_color"/>

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/image_110jia"
            />

        </LinearLayout>

        <TextView android:layout_width="match_parent" android:layout_height="@dimen/common_divide_height" android:background="@color/common_divide_color" android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="租车时长"
            android:textSize="14dp"
            android:textColor="@color/common_item_main_text_color"
        />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:drawableRight="@drawable/right"
            android:drawablePadding="8dp"
            android:hint="请选择"
            android:text=""
            android:textSize="14dp"
            android:textColorHint="@color/common_item_sub_text_color"
            android:textColor="@color/common_item_sub_text_color"
        />

        <TextView android:layout_width="match_parent" android:layout_height="@dimen/common_divide_height" android:background="@color/common_divide_color" android:layout_alignParentBottom="true"/>
    </RelativeLayout>


</LinearLayout>