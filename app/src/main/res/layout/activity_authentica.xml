<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <FrameLayout
        style="@style/titlebackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hpx96"
        android:layout_gravity="top" >

        <TextView
            android:id="@id/authentica_back"
            style="@style/titlesmalltext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/wpx30"
            android:background="@drawable/return_arrow" />

        <TextView
            style="@style/titletext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/authentica" />
    </FrameLayout>

    <FrameLayout
        android:id="@id/authentica_imagelayout"
        android:layout_width="@dimen/wpx600"
        android:layout_height="@dimen/hpx300"
        android:layout_marginLeft="@dimen/wpx60"
        android:layout_marginRight="@dimen/wpx60"
        android:layout_marginTop="@dimen/hpx30"
        android:descendantFocusability="blocksDescendants" >

        <ImageView
            android:id="@id/authentica_imageview"
            android:layout_width="@dimen/wpx600"
            android:layout_height="@dimen/hpx300"
            android:scaleType="fitXY" />

        <TextView
            android:id="@id/authentica_infor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/dianjishangchuan"
            android:textColor="@color/menugreen"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@id/authentica_infor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/hpx36"
            android:text="@string/shangchuantishi"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp16" />
    </FrameLayout>

    <Button
        android:id="@id/authentica_okbutton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hpx100"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/wpx60"
        android:layout_marginRight="@dimen/wpx60"
        android:layout_marginTop="@dimen/hpx50"
        android:background="@drawable/chongdianyemian5_1_03"
        android:gravity="center"
        android:text="@string/ok"
        android:textColor="@color/white"
        android:textSize="@dimen/sp18"
        android:visibility="invisible" />

</LinearLayout>