<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="afterDescendants"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/hpx10"
    android:paddingLeft="@dimen/wpx30"
    android:paddingRight="@dimen/wpx30"
    android:paddingTop="@dimen/hpx10" >

    <TextView
        android:id="@id/listview_item_chargegunslist_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@id/listview_item_chargegunslist_infor_number"
        android:layout_width="@dimen/wpx150"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/sp16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx100" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="@dimen/wpx165"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1.0" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@id/listview_item_chargegunslist_infor_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@id/listview_item_chargegunslist_infor_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@id/listview_item_chargegunslist_infor_statustxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp16" />

                    <TextView
                        android:id="@id/listview_item_chargegunslist_infor_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@id/listview_item_chargegunslist_infor_charge"
                android:layout_width="@dimen/wpx165"
                android:layout_height="@dimen/hpx60"
                android:layout_gravity="right|center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16" />
        </FrameLayout>

        <ImageView
            android:id="@id/listview_item_chargegunslist_infor_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/line"
            android:visibility="gone" />

        <FrameLayout
            android:id="@id/listview_item_chargegunslist_infor_framelayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx100"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="@dimen/wpx165"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1.0" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@id/listview_item_chargegunslist_infor_name2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@id/listview_item_chargegunslist_infor_type2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@id/listview_item_chargegunslist_infor_status2txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp16" />

                    <TextView
                        android:id="@id/listview_item_chargegunslist_infor_status2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@id/listview_item_chargegunslist_infor_charge2"
                android:layout_width="@dimen/wpx165"
                android:layout_height="@dimen/hpx60"
                android:layout_gravity="right|center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>