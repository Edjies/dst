<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#ffffffff"
    android:clickable="true">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/huiyuanzhongxin"
            android:orientation="vertical"
            android:paddingTop="30dp">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <ImageView
                    android:id="@+id/activity_main_user_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/lvka"/>
                <TextView
                    android:id="@+id/activity_main_user_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:orientation="horizontal">
                <TextView
                    android:id="@+id/activity_main_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/activity_main_user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/activity_main_service_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_layout"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    style="@style/main_sliding_menu_list_item"
                    android:drawableLeft="@drawable/fuwuguize"
                    android:text="服务规则"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/activity_main_common_problem_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_layout"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    style="@style/main_sliding_menu_list_item"
                    android:drawableLeft="@drawable/changjianwenti"
                    android:text="常见问题"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/activity_main_return_suggestion_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_layout"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    style="@style/main_sliding_menu_list_item"
                    android:drawableLeft="@drawable/yijianfankui"
                    android:text="意见反馈"/>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/activity_main_version_update_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_layout">

                <TextView
                    style="@style/main_sliding_menu_list_item"
                    android:drawableLeft="@drawable/banbenshengji"
                    android:text="版本升级"/>
                <TextView
                    android:id="@+id/activity_main_show_update_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="20dp"
                    android:textColor="@color/gray"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/activity_main_clean_cache_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_layout"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:drawableLeft="@drawable/qinglihuancun"
                    style="@style/main_sliding_menu_list_item" android:text="清理缓存"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/activity_main_with_us_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_layout"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:drawableLeft="@drawable/guanyuwomen"
                    style="@style/main_sliding_menu_list_item" android:text="关于我们"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/activity_main_h5_test_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_layout"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:drawableLeft="@drawable/peisong"
                    style="@style/main_sliding_menu_list_item" android:text="配送任务"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_layout"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:drawableLeft="@drawable/peisong"
                    style="@style/main_sliding_menu_list_item" android:text="测试"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="bottom"
                  android:layout_marginBottom="5dp"
                  android:orientation="horizontal"
    >
        <LinearLayout android:id="@+id/activity_main_tell_us_layout"
                      android:layout_width="0dp"
                      android:layout_height="30dp"
                      android:layout_weight="1"
                      android:background="@drawable/home_layout"
                      android:gravity="center_vertical"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingLeft="25dp"
                      android:gravity="center"
                      android:drawablePadding="6dp"
                      android:drawableLeft="@drawable/lianxikefu"
                      android:text="客服热线"
                      android:textColor="@color/common_item_main_text_color"
                      android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_main_share_friend_layout"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/home_layout"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView android:id="@+id/activity_main_share_friend"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:paddingLeft="25dp"
                      android:gravity="center"
                      android:drawablePadding="6dp"
                      android:drawableLeft="@drawable/share"
                      android:text="分享好友"
                      android:textColor="@color/common_item_main_text_color"
                      android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_main_progresslayout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@color/transparent_black"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:text="@string/qinglizhong"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"/>
    </LinearLayout>
</FrameLayout>