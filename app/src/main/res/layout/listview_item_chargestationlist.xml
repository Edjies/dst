<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroudgray"
    android:descendantFocusability="afterDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@id/listview_item_chargestationlist_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hpx330"
        android:layout_marginBottom="@dimen/hpx20"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/wpx24"
        android:paddingRight="@dimen/wpx24" >

        <TextView
            android:id="@id/listview_item_chargestationlist_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/hpx100"
            android:orientation="horizontal" >

            <TextView
                android:id="@id/listview_item_chargestationlist_infor_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/gray4"
                android:textSize="@dimen/sp18" />

            <ImageView
                android:id="@id/listview_item_chargestationlist_infor_typeimage_byd"
                android:layout_width="@dimen/wpx36"
                android:layout_height="@dimen/hpx36"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/wpx10"
                android:scaleType="fitXY"
                android:src="@drawable/bycc"
                android:visibility="gone" />

            <ImageView
                android:id="@id/listview_item_chargestationlist_infor_typeimage_gj"
                android:layout_width="@dimen/wpx36"
                android:layout_height="@dimen/hpx36"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/wpx10"
                android:scaleType="fitXY"
                android:src="@drawable/gdc"
                android:visibility="gone" />

            <ImageView
                android:id="@id/listview_item_chargestationlist_infor_typeimage_tsl"
                android:layout_width="@dimen/wpx36"
                android:layout_height="@dimen/hpx36"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/wpx10"
                android:scaleType="fitXY"
                android:src="@drawable/tslc"
                android:visibility="gone" />

            <ImageView
                android:id="@id/listview_item_chargestationlist_infor_typeimage_qt"
                android:layout_width="@dimen/wpx36"
                android:layout_height="@dimen/hpx36"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/wpx10"
                android:scaleType="fitXY"
                android:src="@drawable/bxc"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/hpx100"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/wpx36"
                android:layout_height="@dimen/hpx36"
                android:scaleType="fitXY"
                android:src="@drawable/dianzhanditu_3_14" />

            <TextView
                android:id="@id/listview_item_chargestationlist_infor_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:minHeight="@dimen/hpx100"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp16" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx100" >

            <TextView
                android:id="@id/listview_item_chargestationlist_infor_distance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@id/listview_item_chargestationlist_infor_chargestatus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp16" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>