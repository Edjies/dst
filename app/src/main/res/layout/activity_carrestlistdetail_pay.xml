<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudgray" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginBottom="@dimen/hpx112"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@id/carrestlistdetail_pay_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="@dimen/hpx50" >

            <TextView
                android:id="@id/carrestlistdetail_pay_back"
              style="@style/back" />

            <TextView
                android:text="@string/dingdanxiangqing"
                style="@style/topTitle" />
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hpx20"
            android:fadingEdge="none"
            android:overScrollMode="never" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hpx155"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/hpx60" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/hpx2"
                            android:layout_gravity="center"
                            android:background="@color/textgreen" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="@dimen/wpx40"
                                android:layout_height="@dimen/wpx40"
                                android:scaleType="fitXY"
                                android:src="@drawable/tuoyuan2" />

                            <ImageView
                                android:layout_width="@dimen/wpx40"
                                android:layout_height="@dimen/wpx40"
                                android:layout_marginLeft="@dimen/wpx90"
                                android:scaleType="fitXY"
                                android:src="@drawable/tuoyuan2" />

                            <ImageView
                                android:layout_width="@dimen/wpx40"
                                android:layout_height="@dimen/wpx40"
                                android:layout_marginLeft="@dimen/wpx90"
                                android:scaleType="fitXY"
                                android:src="@drawable/tuoyuan2" />

                            <ImageView
                                android:layout_width="@dimen/wpx40"
                                android:layout_height="@dimen/wpx40"
                                android:layout_marginLeft="@dimen/wpx90"
                                android:scaleType="fitXY"
                                android:src="@drawable/tuoyuan2" />

                            <ImageView
                                android:layout_width="@dimen/wpx40"
                                android:layout_height="@dimen/wpx40"
                                android:layout_marginLeft="@dimen/wpx90"
                                android:scaleType="fitXY"
                                android:src="@drawable/tuoyuan" />
                        </LinearLayout>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/hpx60"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="@dimen/wpx130"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/daizhifu"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp14" />

                        <TextView
                            android:layout_width="@dimen/wpx130"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/yizhifu"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp14" />

                        <TextView
                            android:layout_width="@dimen/wpx130"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/yitiche"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp14" />

                        <TextView
                            android:layout_width="@dimen/wpx130"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/yihaiche"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp14" />

                        <TextView
                            android:layout_width="@dimen/wpx130"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/yiwanjie"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp14" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hpx20"
                    android:background="@color/white"
                    android:minHeight="@dimen/hpx100"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/hpx20"
                    android:paddingLeft="@dimen/wpx24"
                    android:paddingTop="@dimen/hpx20" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/dingdanhao"
                        android:textColor="@color/textgreen"
                        android:textSize="@dimen/sp16" />

                    <TextView
                        android:id="@id/carrestlistdetail_pay_danhao"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/wpx10"
                        android:gravity="center_vertical"
                        android:textColor="@color/textgreen"
                        android:textSize="@dimen/sp16" />
                </LinearLayout>

                <TextView
                    android:id="@id/carrestlistdetail_pay_feiyongshuoming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hpx20"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/hpx80"
                    android:paddingLeft="@dimen/wpx24"
                    android:paddingTop="@dimen/hpx20"
                    android:text="@string/feiyongshuoming"
                    android:textColor="@color/textgreen"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hpx1"
                    android:background="@color/line_gray" />

                <TextView
                    android:id="@id/carrestlistdetail_pay_feiyongshuoming_infor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hpx150"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/wpx24"
                    android:paddingRight="@dimen/wpx24"
                    android:textColor="@color/gray4"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hpx20"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/hpx80"
                    android:paddingLeft="@dimen/wpx24"
                    android:paddingTop="@dimen/hpx20"
                    android:text="@string/zhifufeiyong"
                    android:textColor="@color/textgreen"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hpx1"
                    android:background="@color/line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/hpx20"
                     android:minHeight="@dimen/hpx80"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/wpx24" >

                    <TextView
                        android:id="@id/carrestlistdetail_pay_zhifufeiyong"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray4"
                        android:textSize="@dimen/sp16" />

                    <TextView
                        android:id="@id/carrestlistdetail_pay_zhifufeiyong_money"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/wpx10"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray4"
                        android:textSize="@dimen/sp16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hpx20"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/hpx80"
                        android:paddingLeft="@dimen/wpx24"
                        android:paddingRight="@dimen/wpx24"
                        android:paddingTop="@dimen/hpx20" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:gravity="center_vertical"
                            android:text="@string/paytype"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp16" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@id/carrestlistdetail_pay_zhifufangshi"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textColor="@color/gray4"
                                android:textSize="@dimen/sp16" />

                            <ImageView
                                android:layout_width="@dimen/wpx30"
                                android:layout_height="@dimen/hpx30"
                                android:layout_marginLeft="@dimen/wpx20"
                                android:scaleType="fitXY"
                                android:visibility="gone" />
                        </LinearLayout>
                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/hpx1"
                        android:background="@color/line_gray" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/wpx24"
                        android:paddingRight="@dimen/wpx24" >

                        <RadioButton
                            android:id="@id/carrestlistdetail_pay_zhifubao"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/hpx100"
                            android:background="@color/transparent"
                            android:button="@null"
                            android:checked="true"
                            android:drawableLeft="@drawable/zhifubao"
                            android:drawablePadding="@dimen/wpx30"
                            android:drawableRight="@drawable/btn_radio"
                            android:text="@string/zhifubao"
                            android:textColor="@color/gray4" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/hpx1"
                            android:background="@color/line_gray" />

                        <RadioButton
                            android:id="@id/carrestlistdetail_pay_weixin"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/hpx100"
                            android:background="@color/transparent"
                            android:button="@null"
                            android:drawableLeft="@drawable/weixin"
                            android:drawablePadding="@dimen/wpx30"
                            android:drawableRight="@drawable/btn_radio"
                            android:text="@string/weixin"
                            android:textColor="@color/gray4" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hpx100"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/wpx10" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/hejifeiyong"
                android:textColor="@color/textgreen"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@id/carrestlistdetail_pay_okmoney"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/wpx10"
                android:gravity="center_vertical"
                android:textColor="@color/textgreen"
                android:textSize="@dimen/sp18" />
        </LinearLayout>

        <TextView
            android:id="@id/carrestlistdetail_pay_ok"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:background="@color/yellow2"
            android:gravity="center"
            android:text="@string/querenfukuan"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18" />
    </LinearLayout>

</FrameLayout>