<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/wpx600"
        android:layout_height="@dimen/hpx200"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx96"
            android:gravity="center"
            android:text="@string/banbengengxin"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16" />

        <ImageView
            android:layout_width="@dimen/wpx600"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx100"
            android:gravity="center"
            android:orientation="vertical" >

            <ProgressBar
                android:id="@id/view_downloadprogress_dialog_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/wpx500"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>