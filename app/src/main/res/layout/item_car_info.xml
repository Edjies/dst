<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/common_white_background_color">
    <TextView android:layout_width="match_parent" android:layout_height="@dimen/common_divide_tab_height" android:background="@color/common_gray_background_color"/>
    <TextView android:layout_width="match_parent" android:layout_height="@dimen/common_divide_height" android:background="@color/common_divide_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <ImageView
            android:id="@+id/iv_car_img"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/no_pic2"
            android:scaleType="center"
            android:layout_centerVertical="true"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_car_img"
            android:orientation="vertical"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
            >
                <TextView
                    android:id="@+id/tv_brand_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="北汽比亚迪"
                    android:textSize="16dp"
                    android:textColor="@color/common_item_main_text_color"
                />

                <TextView
                    android:id="@+id/tv_model_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="8dp"
                    android:text="T33"
                    android:textSize="13dp"
                    android:textColor="@color/common_item_main_text_color"
                />

            </LinearLayout>
            <TextView android:layout_width="match_parent" android:layout_height="@dimen/common_divide_height" android:background="@color/common_divide_color" android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/tv_type_name"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="12dp"
                android:drawableLeft="@drawable/cartype"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:text="abc"
                android:textSize="13dp"/>

            <TextView
                android:id="@+id/tv_endurance"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="12dp"
                android:drawableLeft="@drawable/xuhang"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:text="续航 : "
                android:textSize="13dp"/>

            <TextView
                android:id="@+id/tv_cubage"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="12dp"
                android:drawableLeft="@drawable/rongji"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:text="货箱容积 : m³"
                android:textSize="13dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="12dp">
                <TextView
                    android:id="@+id/tv_hour_rent"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:drawableLeft="@drawable/zujin"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:text="18"
                    android:textSize="13dp"
                    android:textColor="@color/common_color_green"
                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:drawablePadding="6dp"
                    android:layout_toRightOf="@id/tv_hour_rent"
                    android:gravity="center_vertical"
                    android:text="/时"
                    android:textSize="13dp"
                    android:textColor="@color/common_item_main_text_color"
                />

                <TextView
                    android:id="@+id/tv_day_rent"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"

                    android:drawablePadding="6dp"
                    android:layout_marginLeft="90dp"
                    android:gravity="center_vertical"
                    android:text="18"
                    android:textSize="13dp"
                    android:textColor="@color/common_color_green"
                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:drawablePadding="6dp"
                    android:layout_toRightOf="@id/tv_day_rent"
                    android:gravity="center_vertical"
                    android:text="/天"
                    android:textSize="13dp"
                    android:textColor="@color/common_item_main_text_color"
                />

            </RelativeLayout>

        </LinearLayout>





    </RelativeLayout>
</LinearLayout>
