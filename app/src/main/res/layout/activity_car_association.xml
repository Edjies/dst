<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/activity_car_association"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/car_association_activity_toplayout"
        >

            <TextView
                android:id="@+id/carAssociation_activity_back"
                style="@style/back"/>

            <TextView
                android:text="关联车辆"
                style="@style/topTitle"/>
        </FrameLayout>
        <TextView android:layout_width="match_parent"
                  android:layout_height="1px"
                  android:background="@color/line_gray"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="60dp"
                      android:layout_marginLeft="40dp"
                      android:layout_marginRight="40dp"
                      android:layout_marginTop="60dp"
                      android:layout_weight="1"
                      android:background="@drawable/shape_my_car_input_selector"
                      android:orientation="vertical"
                      android:padding="10dp"
                      android:translationZ="20dp">
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginTop="30dp"
                       android:background="@drawable/association_car"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="30dp"
                          android:background="@drawable/kuang_03"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/car_association_activity_province_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/car_association_activity_province"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="粤"
                    />
                    <ImageView android:layout_width="13dp"
                               android:layout_height="10dp"
                               android:layout_marginLeft="4dp"
                               android:background="@drawable/image_03_down"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/car_association_activity_zhimu_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/car_association_activity_zhimu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="B"
                    />
                    <ImageView android:layout_width="13dp"
                               android:layout_height="10dp"
                               android:layout_marginLeft="4dp"
                               android:background="@drawable/image_03_down"/>
                </LinearLayout>
                <TextView android:layout_width="1px"
                          android:layout_height="25dp"
                          android:layout_marginLeft="15dp"
                          android:layout_marginRight="15dp"
                          android:background="@color/gray4"
                />
                <EditText
                    android:id="@+id/car_association_activity_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:hint="车牌号后5位"
                    android:lines="1"
                    android:maxLength="7"
                    android:textSize="15sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/car_association_activity_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="请确认您输入的是正确的地上铁车牌号"
                android:textColor="@color/gray"/>
            <Button
                android:id="@+id/car_association_activity_confirm_association"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="70dp"
                android:text="确认关联"
                android:textColor="@color/gray4"
               />
        </LinearLayout>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/car_association_activity_select_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="gone">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                <TextView
                    android:id="@+id/car_association_activity_concel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="取消"
                    android:textColor="@color/gray"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerHorizontal="true"
                          android:padding="5dp"
                          android:text="请选择"
                          android:textColor="@color/gray"/>
                <TextView
                    android:id="@+id/car_association_activity_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:text="确定"
                    android:textColor="@color/gray"/>
                />
            </RelativeLayout>
            <com.haofeng.apps.dst.ui.view.MyWheelView
                android:id="@+id/car_association_activity_wheelview"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/car_association_activity_select_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="gone">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                <TextView
                    android:id="@+id/car_association_activity_concel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="取消"
                    android:textColor="@color/gray"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerHorizontal="true"
                          android:padding="5dp"
                          android:text="请选择"
                          android:textColor="@color/gray"/>
                <TextView
                    android:id="@+id/car_association_activity_confirm2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:text="确定"
                    android:textColor="@color/gray"/>
                />
            </RelativeLayout>
            <com.haofeng.apps.dst.ui.view.MyWheelView
                android:id="@+id/car_association_activity_wheelview2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
            />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
