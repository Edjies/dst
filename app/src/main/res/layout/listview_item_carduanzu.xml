<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudgray"
    android:orientation="vertical" >

    <TextView
        android:id="@id/listview_item_carduanzu_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hpx24"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/wpx20" >

        <FrameLayout
            android:layout_width="@dimen/wpx280"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <ImageView
                android:id="@id/listview_item_carduanzu_car_image"
                android:layout_width="@dimen/wpx280"
                android:layout_height="@dimen/hpx255"
                android:layout_gravity="center"
                android:scaleType="fitXY" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wpx5"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/listview_item_carduanzu_car_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/hpx60"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:id="@id/listview_item_carduanzu_car_type"
                    android:layout_width="@dimen/wpx170"
                    android:layout_height="@dimen/hpx40"
                    android:layout_gravity="right"
                    android:background="@drawable/tag_car"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/hpx1"
                android:background="@color/line_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/hpx60"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/wpx32"
                    android:layout_height="@dimen/wpx32"
                    android:scaleType="fitXY"
                    android:src="@drawable/xuhang" />

                <TextView
                    android:id="@id/listview_item_carduanzu_car_xuhang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/wpx10"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/wpx32"
                    android:layout_height="@dimen/wpx32"
                    android:scaleType="fitXY"
                    android:src="@drawable/rongji" />

                <TextView
                    android:id="@id/listview_item_carduanzu_car_dizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/wpx10"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/hpx60"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hpx60"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/wpx32"
                    android:layout_height="@dimen/wpx32"
                    android:scaleType="fitXY"
                    android:src="@drawable/zujin" />

                <TextView
                    android:id="@id/listview_item_carduanzu_car_zujin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/wpx10"
                    android:gravity="center_vertical"
                    android:textColor="@color/textdeepgreen"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/wpx5"
                    android:gravity="center_vertical"
                    android:text="@string/zujinshi"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@id/listview_item_carduanzu_car_zujin2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:textColor="@color/textdeepgreen"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/zujintian"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>