<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_rent_car_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudgray"
    android:orientation="vertical"
    tools:context="com.haofeng.apps.dst.ui.MyRentCarOrderActivity">

    <FrameLayout
        android:id="@+id/activity_my_rent_car_order_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/activity_my_rent_car_order_back"
            style="@style/back"/>

        <TextView
            style="@style/topTitle"
            android:text="我的订单"/>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <LinearLayout
            android:id="@+id/activity_my_rent_car_order_fenshi_top_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="分时订单"
                android:textColor="@color/textgray"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/activity_my_rent_car_order_fenshi_top_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:layout_marginTop="5dp"
                android:background="@color/textdeepgreen"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_my_rent_car_order_changzhu_top_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="长租订单"
                android:textColor="@color/textgray"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/activity_my_rent_car_order_changzhu_top_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:layout_marginTop="5dp"
                android:background="@color/textdeepgreen"/>
        </LinearLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/activity_my_rent_car_order_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
