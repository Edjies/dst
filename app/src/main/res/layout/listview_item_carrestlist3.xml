<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudgray"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/hpx20"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hpx80"
                android:background="@color/white"
                android:paddingLeft="@dimen/wpx88"
                android:paddingRight="@dimen/wpx24" >

                <TextView
                    android:id="@id/listview_item_carrestlist3_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/vehicle"
                    android:textColor="@color/textgreen"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:id="@id/listview_item_carrestlist3_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/wpx10"
                    android:gravity="center_vertical"
                    android:text="@string/vehicle"
                    android:textColor="@color/textgreen"
                    android:textSize="@dimen/sp16"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/hpx1"
                android:background="@color/line_gray" />

            <TextView
                android:id="@id/listview_item_carrestlist3_infor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hpx70"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/wpx88"
                android:paddingRight="@dimen/wpx24"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp16"
                android:visibility="gone" />

            <TextView
                android:id="@id/listview_item_carrestlist3_infor2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hpx70"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/wpx88"
                android:paddingRight="@dimen/wpx24"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp16"
                android:visibility="gone" />

            <TextView
                android:id="@id/listview_item_carrestlist3_infor3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hpx70"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/wpx88"
                android:paddingRight="@dimen/wpx24"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@id/listview_item_carrestlist3_infor4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hpx70"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/wpx88"
                android:paddingRight="@dimen/wpx24"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp16"
                android:visibility="gone" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="@dimen/wpx88"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@id/listview_item_carrestlist3_line_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="@dimen/wpx2"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/textgreen" />
            </LinearLayout>

            <ImageView
                android:id="@id/listview_item_carrestlist3_image"
                android:layout_width="@dimen/wpx40"
                android:layout_height="@dimen/wpx40"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/hpx20"
                android:scaleType="fitXY" />
        </FrameLayout>
    </FrameLayout>

</LinearLayout>