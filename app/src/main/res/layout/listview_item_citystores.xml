<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudgray"
    android:orientation="vertical" >

    <TextView
        android:id="@id/list_item_citystors_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hpx20"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@id/list_item_citystors_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/hpx80"
            android:paddingLeft="@dimen/wpx24"
            android:paddingRight="@dimen/wpx24"
            android:textColor="@color/textgreen"
            android:textSize="@dimen/sp16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx1"
            android:background="@color/line_gray" />

        <TextView
            android:id="@id/list_item_citystors_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/hpx80"
            android:paddingLeft="@dimen/wpx24"
            android:paddingRight="@dimen/wpx24"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp16" />
    </LinearLayout>

</LinearLayout>