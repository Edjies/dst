<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@color/white">
    <ImageView
        android:id="@+id/iv_car_img"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="25dp"
        android:layout_centerVertical="true"
        android:scaleType="center"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/iv_car_img"
        android:orientation="vertical"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
        >
            <TextView
                android:id="@+id/tv_brand_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="--"
                android:textSize="16dp"
                android:textColor="@color/common_item_main_text_color"
            />

            <TextView
                android:id="@+id/tv_model_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="8dp"
                android:text="--"
                android:textSize="13dp"
                android:textColor="@color/common_item_main_text_color"
            />

        </LinearLayout>
        <TextView android:layout_width="match_parent" android:layout_height="@dimen/common_divide_height" android:background="@color/common_divide_color" android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/tv_type_name"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/cartype"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="13dp"/>


        <TextView
            android:id="@+id/tv_endurance"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/xuhang"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:text="续航 : "
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/tv_cubage"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/rongji"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:text="货箱容积 : "
            android:textSize="13dp"/>

    </LinearLayout>





</RelativeLayout>