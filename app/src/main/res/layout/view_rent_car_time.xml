<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:background="@color/common_white_background_color">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/rl_center"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">


        <ImageView
            android:id="@+id/iv_time_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:src="@drawable/quhuanshijian"

        />

        <RelativeLayout
            android:id="@+id/rl_pick_datetime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_time_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"

            >


            <TextView
                android:id="@+id/tv_pick_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/tv_hor_divide"
                android:text="05-28"
                android:textSize="17dp"
                android:textColor="@color/common_item_main_text_color"
            />

            <TextView
                android:id="@+id/tv_hor_divide"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="2dp"
            />

            <TextView
                android:id="@+id/tv_hint_pick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:visibility="gone"
                android:text="选择 \n 取车时间"
                android:textColor="@color/common_item_sub_text_color"
                android:textSize="14dp"
            />

            <TextView
                android:id="@+id/tv_pick_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_hor_divide"
                android:layout_centerHorizontal="true"
                android:text="周四 10:00"
                android:textSize="12dp"
                android:textColor="@color/common_item_sub_text_color"
            />


        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@+id/iv_arrow"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/tv_rent_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/common_color_green"
                android:textSize="20dp"
            />

            <TextView
                android:id="@+id/tv_time_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天"
                android:textColor="@color/common_item_main_text_color"
                android:textSize="13dp"
            />

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/shichangjiantou"
        />
        <LinearLayout
            android:id="@+id/ll_rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_below="@+id/iv_arrow"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预计租金:"
                android:textColor="@color/common_item_main_text_color"
                android:textSize="13dp"
            />

            <TextView
                android:id="@+id/tv_rent_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$230"
                android:textColor="@color/common_item_sub_text_color"
                android:textSize="13dp"
            />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/rl_center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <RelativeLayout
            android:id="@+id/rl_return_datetime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/tv_return_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_hor_divide_1"
                android:layout_centerHorizontal="true"
                android:text="05-28"
                android:textSize="17dp"
                android:textColor="@color/common_item_main_text_color"
            />

            <TextView
                android:id="@+id/tv_hor_divide_1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="2dp"
            />

            <TextView
                android:id="@+id/tv_hint_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:visibility="gone"
                android:text="选择 \n 还车时间"
                android:textSize="14dp"
                android:textColor="@color/common_item_sub_text_color"
            />

            <TextView
                android:id="@+id/tv_return_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_hor_divide_1"
                android:layout_centerHorizontal="true"
                android:text="周四 10:00"
                android:textSize="12dp"
                android:textColor="@color/common_item_sub_text_color"
            />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>