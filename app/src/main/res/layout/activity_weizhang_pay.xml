<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/backgroudgray"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/weizhangpay_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/weizhangpay_back"
            style="@style/back"/>

        <TextView
            style="@style/topTitle"
            android:text="违章支付"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/hpx20"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="@dimen/wpx35">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="罚款"
            android:textColor="@color/gray4"
            android:textSize="@dimen/sp16"/>

        <TextView
            android:id="@+id/activity_weizhang_fakuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/hpx2"
        android:layout_marginLeft="@dimen/wpx40"
        android:layout_marginRight="@dimen/wpx35"
        android:scaleType="fitXY"
        android:src="@drawable/next_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="扣分"
            android:textColor="@color/gray4"
            android:textSize="@dimen/sp16"/>

        <TextView
            android:id="@+id/activity_weizhang_koufeng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/hpx2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/next_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/wpx20"
            android:gravity="center_vertical"
            android:text="服务费"
            android:textColor="@color/gray4"
            android:textSize="@dimen/sp16"/>

        <TextView
            android:id="@+id/activity_weizhang_service_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/hpx1"
        android:background="@color/line_gray"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/paytype"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp16"/>

        <LinearLayout
            android:id="@+id/activity_weizhang_pay_payway_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/activity_weizhang_pay_payway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray4"
                android:textSize="@dimen/sp16"/>

            <ImageView
                android:id="@+id/activity_weizhang_pay_image"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
            />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/hpx1"
        android:background="@color/line_gray"/>

    <RadioGroup
        android:id="@+id/activity_weizhang_redio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <RadioButton
            android:id="@+id/activity_weizhang_zhifubao"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx100"
            android:background="@color/transparent"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/zhifubao"
            android:drawablePadding="@dimen/wpx30"
            android:drawableRight="@drawable/btn_radio"
            android:text="@string/zhifubao"
            android:textColor="@color/gray4"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx1"
            android:background="@color/line_gray"/>

        <RadioButton
            android:id="@+id/activity_weizhang_weixin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx100"
            android:background="@color/transparent"
            android:button="@null"
            android:drawableLeft="@drawable/weixin"
            android:drawablePadding="@dimen/wpx30"
            android:drawableRight="@drawable/btn_radio"
            android:text="@string/weixin"
            android:textColor="@color/gray4"/>
    </RadioGroup>


    <Button
        android:id="@+id/activity_weizhang_pay_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hpx100"
        android:layout_marginLeft="@dimen/wpx60"
        android:layout_marginRight="@dimen/wpx60"
        android:layout_marginTop="@dimen/hpx50"
        android:background="@drawable/chongdianyemian5_1_03"
        android:gravity="center"
        android:text="@string/wallet_pay"
        android:textColor="@color/white"
        android:textSize="@dimen/sp18"/>

</LinearLayout>