<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudgray"
    android:orientation="vertical" >

    <TextView
        android:id="@id/weizhanglist_listitem_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hpx20"
        android:background="@color/white"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx80"
            android:paddingLeft="@dimen/wpx24"
            android:paddingRight="@dimen/wpx24" >

            <TextView
                android:id="@id/weizhanglist_listitem_danhao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/gray4"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@id/weizhanglist_listitem_chehao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/gray4"
                android:textSize="@dimen/sp16" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx1"
            android:background="@color/line_gray" />

        <TextView
            android:id="@id/weizhanglist_listitem_infor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/hpx70"
            android:paddingLeft="@dimen/wpx24"
            android:paddingRight="@dimen/wpx24"
            android:textColor="@color/gray4"
            android:textSize="@dimen/sp16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/wpx24"
            android:paddingRight="@dimen/wpx24" >

            <TextView
                android:id="@id/weizhanglist_listitem_infor2"
                android:layout_width="@dimen/wpx480"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/hpx70"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@id/weizhanglist_listitem_money"
                android:layout_width="@dimen/wpx200"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:textColor="@color/gray4"
                android:textSize="@dimen/sp16" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx1"
            android:background="@color/line_gray" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx80"
            android:paddingLeft="@dimen/wpx24"
            android:paddingRight="@dimen/wpx24" >

            <TextView
                android:id="@id/weizhanglist_listitem_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@id/weizhanglist_listitem_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp16" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>