<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/backgroudgray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@id/userinfor_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
       >

            <TextView
                android:id="@id/forgetpwd_backtextview"
                style="@style/back"/>

            <TextView
                android:id="@id/userinfor_backtextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/gerenziliao"
                android:textColor="@color/textgreen"
                android:textSize="@dimen/sp18"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx90"
            android:layout_marginTop="@dimen/hpx20"
            android:background="@color/white"
            android:paddingLeft="@dimen/hpx24"
            android:paddingRight="@dimen/hpx24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:text="@string/zhenshixingming"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp16"/>

            <TextView
                android:id="@id/userinfor_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center_vertical|right"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp16"/>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx1"
            android:background="@color/login_line_gray"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx90"
            android:background="@color/white"
            android:paddingLeft="@dimen/hpx24"
            android:paddingRight="@dimen/hpx24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:text="@string/shoujihaoma"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp16"/>

            <TextView
                android:id="@id/userinfor_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center_vertical|right"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp16"/>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx1"
            android:background="@color/login_line_gray"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx90"
            android:background="@color/white"
            android:paddingLeft="@dimen/hpx24"
            android:paddingRight="@dimen/hpx24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:text="@string/gongzuodanwei"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp16"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/userinfor_work"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp16"/>

                <ImageView
                    android:layout_width="@dimen/wpx12"
                    android:layout_height="@dimen/hpx20"
                    android:layout_marginLeft="@dimen/wpx10"
                    android:scaleType="fitXY"
                    android:src="@drawable/right"/>
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx1"
            android:background="@color/login_line_gray"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx90"
            android:background="@color/white"
            android:paddingLeft="@dimen/hpx24"
            android:paddingRight="@dimen/hpx24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:text="@string/shequnichen"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp16"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/userinfor_name2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp16"/>

                <ImageView
                    android:layout_width="@dimen/wpx12"
                    android:layout_height="@dimen/hpx20"
                    android:layout_marginLeft="@dimen/wpx10"
                    android:scaleType="fitXY"
                    android:src="@drawable/right"/>
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx1"
            android:background="@color/login_line_gray"/>

        <FrameLayout
            android:id="@id/userinfor_changepwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx90"
            android:background="@color/white"
            android:descendantFocusability="blocksDescendants"
            android:paddingLeft="@dimen/hpx24"
            android:paddingRight="@dimen/hpx24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:gravity="center_vertical"
                android:text="登录密码"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp16"/>

            <ImageView
                android:layout_width="@dimen/wpx12"
                android:layout_height="@dimen/hpx20"
                android:layout_gravity="right|center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/right"/>
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx1"
            android:background="@color/login_line_gray"/>

        <FrameLayout
            android:id="@+id/userinfor_change_pay_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx90"
            android:background="@color/white"
            android:descendantFocusability="blocksDescendants"
            android:visibility="gone"
            android:paddingLeft="@dimen/hpx24"
            android:paddingRight="@dimen/hpx24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:gravity="center_vertical"
                android:text="支付密码"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp16"/>

            <ImageView
                android:layout_width="@dimen/wpx12"
                android:layout_height="@dimen/hpx20"
                android:layout_gravity="right|center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/right"/>
        </FrameLayout>


        <Button
            android:id="@id/userinfor_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hpx100"
            android:layout_marginBottom="@dimen/hpx40"
            android:layout_marginLeft="@dimen/wpx60"
            android:layout_marginRight="@dimen/wpx60"
            android:layout_marginTop="90dp"
            android:background="@drawable/button_logout"
            android:gravity="center"
            android:text="@string/logout"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18"/>
    </LinearLayout>

</FrameLayout>