<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center" >

    <LinearLayout
        android:layout_width="@dimen/wpx165"
        android:layout_height="@dimen/hpx120"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@id/list_item_maptype_connect_image"
            android:layout_width="@dimen/wpx36"
            android:layout_height="@dimen/wpx36"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

        <TextView
            android:id="@id/list_item_maptype_connect_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/wpx10"
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp16" />
    </LinearLayout>

</LinearLayout>