<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="66dp"
              android:background="@color/common_white_background_color"
>
    <RelativeLayout
        android:id="@+id/rl_amount"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingBottom="13dp"
        android:paddingTop="10dp"
        android:onClick="onClick"
    >
        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_centerHorizontal="true"
            android:text="10000"
            android:textSize="16dp"
            android:textColor="@color/common_color_green"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_amount"
            android:gravity="center"
            android:text="我的钱包"
            android:textSize="12dp"
            android:textColor="@color/common_item_sub_text_color"
        />

    </RelativeLayout>

    <TextView android:layout_width="@dimen/common_divide_height" android:layout_height="match_parent" android:background="@color/common_divide_color" android:layout_marginTop="12dp" android:layout_marginBottom="12dp"/>

    <RelativeLayout
        android:id="@+id/rl_score"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingBottom="13dp"
        android:paddingTop="10dp"
        android:onClick="onClick"
    >
        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_centerHorizontal="true"
            android:text="10000"
            android:textSize="16dp"
            android:textColor="@color/common_color_green"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_score"
            android:gravity="center"
            android:text="我的积分"
            android:textSize="12dp"
            android:textColor="@color/common_item_sub_text_color"
        />

    </RelativeLayout>

    <TextView android:layout_width="@dimen/common_divide_height" android:layout_height="match_parent" android:background="@color/common_divide_color" android:layout_marginTop="12dp" android:layout_marginBottom="12dp"/>

    <RelativeLayout
        android:id="@+id/rl_order"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingBottom="13dp"
        android:paddingTop="10dp"
        android:onClick="onClick"
    >
        <TextView
            android:id="@+id/tv_order"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_centerHorizontal="true"
            android:text="10000"
            android:textSize="16dp"
            android:textColor="@color/common_color_green"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_order"
            android:gravity="center"
            android:text="我的订单"
            android:textSize="12dp"
            android:textColor="@color/common_item_sub_text_color"
        />

    </RelativeLayout>

</LinearLayout>