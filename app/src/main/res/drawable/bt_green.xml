<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/common_color_green_pressed"/>
            <corners android:radius="@dimen/common_bt_radius"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/common_color_unenabled"/>
            <corners android:radius="@dimen/common_bt_radius"/>
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/common_color_green"/>
            <corners android:radius="@dimen/common_bt_radius"/>
        </shape>
    </item>
</selector>