<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/common_color_green"/>
            <corners android:topRightRadius="@dimen/common_bt_radius" android:bottomRightRadius="@dimen/common_bt_radius"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1px" android:color="@color/common_color_green"/>
            <solid android:color="@android:color/transparent"/>
            <corners android:topRightRadius="@dimen/common_bt_radius" android:bottomRightRadius="@dimen/common_bt_radius"/>
        </shape>
    </item>
</selector>