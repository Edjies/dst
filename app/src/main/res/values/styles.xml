<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.



    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="titlebackground">
        <item name="android:background">@color/menugreen</item>
    </style>

    <style name="titlebackground2">
        <item name="android:background">@drawable/main_line</item>
    </style>

    <style name="titletext">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="titlesmalltext">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/wpx30</item>
        <item name="android:paddingRight">@dimen/wpx30</item>
    </style>

    <style name="Bubble.TextAppearance.Dark" parent="android:TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff7f7f7f</item>
    </style>

    <style name="Bubble.TextAppearance.Light" parent="Bubble.TextAppearance.Dark">
        <item name="android:textColor">#ffeeeeee</item>
    </style>

    <style name="ClusterIcon.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">#ffeeeeee</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
   <style name="back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@drawable/fanhuig</item>
    </style>

    <style name="nopay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@drawable/color_gray</item>
        <item name="android:text">@string/weizhifu</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="dialog_nostroke" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@drawable/dialog_radius_background_nostroke</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_out</item>
    </style>

    <style name="AnimationActivity_up_down" mce_bogus="1"
           parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_in_mapset</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_out_mapset</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_in_mapset</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_out_mapset</item>
    </style>
    <!-- 订单页面的样式 -->
    <style name="car_order_money2_price_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:textColor">@color/gray4</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>
    <!-- 订单页面数值样式 -->
    <style name="car_order_money2_price">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/gray4</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>
    <!--侧栏列表样式-->
    <style name="main_sliding_menu_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:drawablePadding">30dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/common_item_main_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--侧栏列表线-->
    <style name="main_sliding_menu_list_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">#797979</item>
    </style>
    <!--top标题-->
    <style name="topTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/textdeepgreen</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>